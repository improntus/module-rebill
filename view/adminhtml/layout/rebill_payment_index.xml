<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Subscriptions</title>
    </head>
    <body>
    <referenceContainer name="content">
        <block class="Improntus\Rebill\Block\Adminhtml\Payment\Container" name="rebill.payment.container">
            <block class="Magento\Backend\Block\Widget\Grid" name="rebill.payment.grid" as="grid">
                <arguments>
                    <argument name="id" xsi:type="string">id</argument>
                    <argument name="dataSource" xsi:type="object">Improntus\Rebill\Model\Rebill\Payment\Collection</argument>
                    <argument name="default_sort" xsi:type="string">id</argument>
                    <argument name="default_dir" xsi:type="string">ASC</argument>
                </arguments>
                <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" name="rebill.payment.column.set" as="grid.columnSet">
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="id">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">ID</argument>
                            <argument name="index" xsi:type="string">id</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="status">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Status</argument>
                            <argument name="index" xsi:type="string">status</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="amount">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Amount</argument>
                            <argument name="index" xsi:type="string">amount</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="currency">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Currency</argument>
                            <argument name="index" xsi:type="string">currency</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="payment_id">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Payment ID</argument>
                            <argument name="index" xsi:type="string">payment_id</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="card_last4">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Card Number</argument>
                            <argument name="index" xsi:type="string">card_last4</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="card_brand">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Card Brand</argument>
                            <argument name="index" xsi:type="string">card_brand</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="payer_email">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Payer Email</argument>
                            <argument name="index" xsi:type="string">payer_email</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="payer_firstname">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Payer Firstname</argument>
                            <argument name="index" xsi:type="string">payer_firstname</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="payer_lastname">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Payer Lastname</argument>
                            <argument name="index" xsi:type="string">payer_lastname</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="description">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Description</argument>
                            <argument name="index" xsi:type="string">description</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="gateway_type">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Gateway Type</argument>
                            <argument name="index" xsi:type="string">gateway_type</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="gateway_description">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Gateway Description</argument>
                            <argument name="index" xsi:type="string">gateway_description</argument>
                            <argument name="type" xsi:type="string">text</argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </block>
    </referenceContainer>
    </body>
</page>
